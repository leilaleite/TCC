<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="EcommerceTCC" transaction-type="RESOURCE_LOCAL">
		<class>ecommerce.model.Categoria</class>
		<class>ecommerce.model.Cliente</class>
		<class>ecommerce.model.Endereco</class>
		<class>ecommerce.model.Produto</class>
		<class>ecommerce.model.Telefone</class>
		<class>ecommerce.model.Cidade</class>
		<class>ecommerce.model.Embalagem</class>
		<class>ecommerce.model.Estado</class>
		<class>ecommerce.model.Pedido</class>
		<class>ecommerce.model.Tamanho</class>
		<class>ecommerce.model.Item</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecommerce"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="javax.persistence.jdbc.password" value="123"/>
		</properties>
	</persistence-unit>
</persistence>
